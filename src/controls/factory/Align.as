package controls.factory {
	import feathers.controls.Button;
	import feathers.controls.ScrollContainer;
	import feathers.layout.VerticalLayout;
	
	/**
	 * Enumerates the different types of Feathers aligns.
	 */
	public class Align {
		
		
		public static const LEFT:String = VerticalLayout.HORIZONTAL_ALIGN_LEFT;
		public static const JUSTIFY:String = VerticalLayout.HORIZONTAL_ALIGN_JUSTIFY;
		public static const CENTER:String = VerticalLayout.HORIZONTAL_ALIGN_CENTER;
		public static const RIGHT:String = VerticalLayout.HORIZONTAL_ALIGN_RIGHT;
		
		public static const TOP:String = VerticalLayout.VERTICAL_ALIGN_TOP;
		public static const MIDDLE:String = VerticalLayout.VERTICAL_ALIGN_MIDDLE;
		public static const BOTTOM:String = VerticalLayout.VERTICAL_ALIGN_BOTTOM;
		
	}
}